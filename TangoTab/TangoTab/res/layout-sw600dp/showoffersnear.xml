<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/show_offers_near" >

    <Button
        android:id="@+id/New_Acc"
        android:layout_width="160sp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/smallgreenselector"
        android:text="Sign up"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/zipactivity_edittext_promocode"
        android:layout_width="328dp"
        android:layout_height="38dp"
        android:layout_above="@+id/New_Acc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:hint="@string/promo_code" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/zipactivity_edittext_promocode"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/work_zip"
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:layout_above="@+id/zipactivity_edittext_promocode"
            android:ems="10"
            android:hint="@string/Work_Zip"
            android:inputType="number" />

        <EditText
            android:id="@+id/home_zip"
            android:layout_width="165dp"
            android:layout_height="38dp"
            android:layout_above="@+id/work_zip"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="3sp"
            android:ems="10"
            android:hint="@string/Home_Zip"
            android:inputType="number" >
        </EditText>
    </LinearLayout>

</RelativeLayout>