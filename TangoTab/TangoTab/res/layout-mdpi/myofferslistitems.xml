<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/offerDetails"
        android:layout_below="@id/lineseparater1"
        android:layout_width="fill_parent"
        android:layout_height="115dp"
        android:orientation="horizontal" > <!-- 102 '''''''' old -> 118 -->

         <!-- 160 * 97 -->

<FrameLayout
    android:layout_width="135dp"
    android:layout_height="115dp"
    android:layout_weight="0.45" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/mydealimage"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#000000"
        android:paddingLeft="15dp"
        android:scaleType="centerCrop" />

    <LinearLayout  
        android:id="@+id/cornerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
     android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  		android:layout_gravity="left"
        android:id="@+id/myImageViewText"
   		android:paddingLeft="3dp"
   		android:textStyle="bold"
   		android:text=" "
   		android:textSize="12sp"
 		
        />
    </LinearLayout>
    
</FrameLayout>

        <RelativeLayout
            android:layout_width="146dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.75"
            android:background="@drawable/bglist"
            android:orientation="vertical"
            android:paddingLeft="8dp" >

            <TextView
                android:id="@+id/businessname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="heloodfsdfasdfasdfadsfasdfaso"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />
<!-- 
            <TextView
                android:id="@+id/Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/businessname"
                android:singleLine="true"
                android:text="Address"
                android:textColor="#000000" />
 -->
            <TextView
                android:id="@+id/timeStamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Time"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/dealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="2"
                android:text="hedfdsafdsgdfsgdsafdasfasfdasflooo"
                android:textColor="#000000"
                android:ellipsize="end" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>