        <!-- ========================================== -->

        <activity
            android:name=".customUrl.activity.CustomUrlActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >

