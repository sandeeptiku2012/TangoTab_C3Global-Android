<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/offerDetails"
        android:layout_below="@id/lineseparater1"
        android:layout_width="fill_parent"
        android:layout_height="115dp"
        android:orientation="horizontal" > <!-- 102 '''''''' old -> 118 -->

         <!-- 160 * 97 -->

<FrameLayout
    android:layout_width="fill_parent"
        android:layout_height="115dp"
        android:layout_weight="1" >

    <ImageView
        android:id="@+id/mydealimage"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_weight="1"
        android:background="#000000"
        android:scaleType="centerCrop"/>

    <LinearLayout  
        android:id="@+id/cornerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg1">
    <TextView
     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  		android:layout_gravity="left"
        android:id="@+id/myImageViewText"
   		android:textColor="@android:color/black"
   		android:textStyle="bold"
   		android:textSize="12sp"
 		android:paddingLeft="6dip"/>
    </LinearLayout>
    
</FrameLayout>

       <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bglist"
        android:orientation="vertical" >

            <TextView
                android:id="@+id/businessname"
               android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:maxLines="2"
            android:text="heloo"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />
<!-- 
            <TextView
                android:id="@+id/Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/businessname"
                android:singleLine="true"
                android:text="Address"
                android:textColor="#000000" />
 -->
           

            <TextView
                android:id="@+id/dealName"
               android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:maxLines="2"
             android:ellipsize="end"
            android:text="dealName"
            android:textColor="#000000"/>
            
             <TextView
                android:id="@+id/timeStamp"
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
           	android:paddingBottom="2dp"
            android:ellipsize="end"
            android:text="nodeals"
            android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>